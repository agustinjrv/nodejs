<div class="container bg-primary p-3 rounded text-white">

  <h3>Create task</h3>
  <form action="/tasks/edit/{{task.id}}" method="POST">

    <div class="row">
      <div class="col">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          value="{{task.title}}"
        />
      </div>
    </div>

    <div class="row">
      <div class="col">
        <label for="description">Description</label>
        <input
          type="text"
          class="form-control"
          name="description"
          value="{{task.description}}"
        />
      </div>
    </div>

    <div class="d-grid gap-2 mt-3">
      <button type="submit" class="btn btn-success">Save</button>
    </div>

  </form>

</div>